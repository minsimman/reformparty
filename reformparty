<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Scroll Photo Flip</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #000;
      overflow-x: hidden;
    }

    .container {
      width: 100%;
    }

    img {
      width: 100%;
      display: block;
      object-fit: cover;
    }

    /* =========================
       photo1 ↔ photo5 (flip)
    ========================= */
    .flip-card {
      width: 100%;
      aspect-ratio: 3 / 4;
      perspective: 1200px;
    }

    .flip-inner {
      width: 100%;
      height: 100%;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.7s ease;
    }

    .flip-card.flipped .flip-inner {
      transform: rotateY(180deg);
    }

    .flip-face {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
    }

    .flip-face.back {
      transform: rotateY(180deg);
    }

    /* =========================
       photo4 ↔ photo6 (page flip)
    ========================= */
    .page-card {
      width: 100%;
      aspect-ratio: 3 / 4;
      position: relative;
      perspective: 1600px;
    }

    .page {
      position: absolute;
      width: 100%;
      height: 100%;
      transform-origin: left center;
      transition: transform 0.9s ease;
    }

    .page.back {
      transform: rotateY(-180deg);
    }

    .page-card.flipped .front {
      transform: rotateY(180deg);
    }

    .page-card.flipped .back {
      transform: rotateY(0deg);
    }
  </style>
</head>

<body>

<div class="container">

  <!-- photo1 / photo5 -->
  <div class="flip-card" onclick="this.classList.toggle('flipped')">
    <div class="flip-inner">
      <img src="photo1.png" class="flip-face front">
      <img src="photo5.png" class="flip-face back">
    </div>
  </div>

  <!-- photo2 -->
  <img src="photo2.png">

  <!-- photo3 -->
  <img src="photo3.png">

  <!-- photo4 / photo6 -->
  <div class="page-card" onclick="this.classList.toggle('flipped')">
    <img src="photo4.png" class="page front">
    <img src="photo6.png" class="page back">
  </div>

</div>

</body>
</html>
